<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    >


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vehicleListGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="60dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vehicle_list"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vehicleListGuide"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/inputGuide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="130dp"
        />

    <EditText
        android:id="@+id/vehicleCount"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="@string/enter_vehicle_count"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:background="@drawable/count_bg"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehicleListGuide"
        app:layout_constraintBottom_toBottomOf="@id/inputGuide"
        app:layout_constraintEnd_toStartOf="@id/fetchBtn"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/fetchBtn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="@string/fetch"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/vehicleListGuide"
        app:layout_constraintBottom_toBottomOf="@id/inputGuide"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vehicleListRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/inputGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <ProgressBar
        android:id="@+id/loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/appColor"
        app:layout_constraintTop_toBottomOf="@id/vehicleListGuide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>